{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MindForge",
  "version": "0.1.0",
  "identifier": "com.mindforge.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "removeUnusedCommands": true
  },
  "app": {
    "windows": [
      {
        "title": "MindForge",
        "width": 1200,
        "height": 800,
        "minWidth": 960,
        "minHeight": 600,
        "decorations": false,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
