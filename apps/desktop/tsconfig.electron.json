{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "electron",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "types": ["node", "electron"],
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "electron/main.ts",
    "electron/preload.ts",
    "electron/mcp/**/*.ts"
  ]
}
