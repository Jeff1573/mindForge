{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "electron",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "types": ["node", "electron"],
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@mindforge/agent": ["../../packages/agent/dist/index.d.ts"],
      "@mindforge/agent/*": ["../../packages/agent/dist/*"]
    }
  },
  "include": [
    "electron/main.ts",
    "electron/preload.ts",
    "electron/mcp/**/*.ts",
    "electron/types/**/*.d.ts"
  ]
}
