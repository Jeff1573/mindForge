{
  "name": "@mindforge/desktop",
  "private": true,
  "version": "0.1.0",
  "description": "MindForge Desktop (Electron + Vite + React)",
  "main": "dist/main.js",
  "dependencies": {
    "@ant-design/icons": "latest",
    "@langchain/anthropic": "^0.3.28",
    "@langchain/core": "^0.3.75",
    "@langchain/google-genai": "^0.2.17",
    "@langchain/groq": "^0.2.4",
    "@langchain/langgraph": "^0.4.9",
    "@langchain/mcp-adapters": "^0.6.0",
    "@langchain/openai": "^0.6.12",
    "@mindforge/agent": "file:../../packages/agent",
    "@modelcontextprotocol/sdk": "1.18.0",
    "@tanstack/react-virtual": "^3.10.8",
    "antd": "latest",
    "clsx": "latest",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.543.0",
    "mindforge": "file:../..",
    "react": "latest",
    "react-dom": "latest",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "latest",
    "autoprefixer": "^10.4.21",
    "concurrently": "latest",
    "electron": "^31",
    "postcss": "^8.4.45",
    "tsx": "^4.20.5",
    "typescript": "latest",
    "vite": "latest"
  },
  "scripts": {
    "dev": "concurrently -n PROMPTS,TSC,DEV -c yellow,magenta,green \"node scripts/watch-prompts.cjs\" \"tsc -p tsconfig.electron.json -w\" \"node scripts/dev.cjs\"",
    "check": "vite build --emptyOutDir",
    "start": "electron .",
    "build": "vite build && tsc -p tsconfig.electron.json && node scripts/copy-prompts.cjs && node scripts/check-prompts.cjs",
    "build:electron": "tsc -p tsconfig.electron.json && node scripts/copy-prompts.cjs",
    "build:renderer": "vite build",
    "lint": "eslint .",
    "prompt:print": "node scripts/print-prompt.cjs",
    "mcp:demo": "tsx electron/mcp/demo.ts",
    "llm:test": "tsx electron/llm/scripts/test-llm.ts",
    "agent:test": "tsx electron/llm/scripts/test-agent.ts",
    "check:mcp": "tsc -p tsconfig.mcp.json --noEmit"
  }
}
