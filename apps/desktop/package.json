{
    "name": "@mindforge/desktop",
    "private": true,
    "version": "0.1.0",
    "description": "MindForge Desktop (Electron + Vite + React)",
    "main": "dist/main.js",
    "scripts": {
        "dev": "concurrently -n TSC,DEV -c magenta,green \"tsc -p tsconfig.electron.json -w\" \"node scripts/dev.cjs\"",
        "check": "vite build --emptyOutDir",
        "start": "electron .",
        "build": "vite build && tsc -p tsconfig.electron.json",
        "build:electron": "tsc -p tsconfig.electron.json",
        "build:renderer": "vite build",
        "lint": "eslint .",
        "smoke:gemini": "npm run build:electron && node scripts/gemini-smoke.cjs"
    },
    "dependencies": {
        "@ant-design/icons": "latest",
        "@langchain/core": "^0.3.75",
        "@langchain/google-genai": "^0.2.17",
        "@modelcontextprotocol/sdk": "1.18.0",
        "antd": "latest",
        "clsx": "latest",
        "dotenv": "^17.2.2",
        "lucide-react": "^0.543.0",
        "react": "latest",
        "react-dom": "latest",
        "react-router-dom": "^6"
    },
    "devDependencies": {
        "@types/node": "latest",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "latest",
        "autoprefixer": "^10.4.21",
        "concurrently": "latest",
        "electron": "^31",
        "postcss": "^8.4.45",
        "typescript": "latest",
        "vite": "latest"
    }
}
