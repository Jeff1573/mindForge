{
  "name": "@mindforge/desktop",
  "private": true,
  "version": "0.1.0",
  "description": "MindForge Desktop (Electron + Vite + React)",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n VITE,ELECTRON,ESBUILD -c green,cyan,magenta \"vite\" \"node scripts/start-electron-dev.mjs\" \"node scripts/build-electron.mjs\"",
    "check": "vite build --emptyOutDir",
    "start": "electron ./dist-electron/main.mjs",
    "web": "vite",
    "build:web": "vite build",
    "preview": "vite preview",
    "build": "vite build",
    "lint": "eslint ."
  },
  "dependencies": {
    "@ant-design/icons": "latest",
    "antd": "latest",
    "clsx": "latest",
    "lucide-react": "^0.543.0",
    "react": "latest",
    "react-dom": "latest",
    "react-router-dom": "^6"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "latest",
    "electron": "^31",
    "autoprefixer": "^10.4.21",
    "concurrently": "latest",
    "esbuild": "latest",
    "postcss": "^8.4.45",
    "typescript": "latest",
    "vite": "latest"
  }
}
