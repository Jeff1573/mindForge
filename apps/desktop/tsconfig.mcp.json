{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist-mcp",
    "rootDir": "electron/mcp",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "types": ["node"],
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "electron/mcp/**/*.ts"
  ]
}

